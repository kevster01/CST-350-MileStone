@model CST350_Milestone1.Models.Cell;


@{
    string[] imagename = { "oringinal.png", "clicked.png", "minehit.png", "flagged.png" };
}
@if (Model.Flagged == false)
{
        < button class= "btn" type = "submit" name = "ButtonNumber" value = "@Model.Row+@Model.Column" asp - controller = "GameBoard" asp - action = "ButtonClick" disabled >
            < img class= "cell" src = "~/img/@imagename[Model.Live == false ? 1 : 2]" />
        </ button >
}
else
{
        < button class= "btn" type = "submit" name = "ButtonNumber" value = "@Model.Row+@Model.Column" asp - controller = "GameBoard" asp - action = "ButtonClick" >
            < img class= "cell" src = "~/img/@imagename[Model.Live == false ? 1 : 2]" />
        </ button >
}
